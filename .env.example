APP_PORT=3333
DATABASE_URL=postgresql://user:password@localhost:5432/autokeeper
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3333

# OAuth - Google
# Get your OAuth credentials from: https://console.cloud.google.com/apis/credentials
# Required scopes: email, profile, openid
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_SECRET_KEY=

# Email Configuration
# Provider: 'stub' (logs to console) or 'resend' (sends real emails)
EMAIL_PROVIDER=stub

# Required when EMAIL_PROVIDER=resend
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=

# Required when EMAIL_PROVIDER=resend
# Must be a verified domain in Resend (e.g., noreply@yourdomain.com)
EMAIL_FROM=noreply@autokeeper.com

# Queue Configuration
# Provider: 'stub' (in-memory) or 'sqs' (Amazon SQS or LocalStack)
QUEUE_PROVIDER=stub

# AWS SQS Configuration (required when QUEUE_PROVIDER=sqs)
# For LocalStack development:
AWS_REGION=us-east-1
AWS_SQS_ENDPOINT=http://localhost:4566
AWS_SQS_QUEUE_URL=http://localhost:4566/000000000000/autokeeper-emails
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# For production AWS SQS (uses IAM Instance Role - no credentials needed):
# AWS_REGION=us-east-1
# AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/autokeeper-emails